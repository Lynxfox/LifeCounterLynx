<resources>


    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->


    </style>

    <!-- Application theme. -->
    <style name="MyTheme" parent="@android:style/Theme.Holo">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:displayOptions">showHome|showTitle</item>

    </style>

    <style name="PlayerLifeText" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/main_player_life_text_size</item>
    </style>

    <style name="PlayerLifeIncrementText" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/main_player_life_increment_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerLifeIncrementText.Increment">
        <item name="android:paddingLeft">@dimen/main_player_life_increment_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/main_player_life_increment_padding_vertical</item>
        <item name="android:text">@string/main_increment</item>
    </style>

    <style name="PlayerLifeIncrementText.Increment.Flipped">
        <item name="android:rotation">180</item>
    </style>

    <style name="PlayerLifeIncrementText.Decrement">
        <item name="android:paddingLeft">@dimen/main_player_life_increment_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/main_player_life_increment_padding_vertical</item>
        <item name="android:text">@string/main_decrement</item>
    </style>

    <style name="PlayerLifeIncrementText.Decrement.Flipped">
        <item name="android:rotation">180</item>
    </style>

</resources>
